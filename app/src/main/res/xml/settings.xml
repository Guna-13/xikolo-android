<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings_category_data_usage">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="video_quality"
            android:summary="@string/settings_summary_video_quality"
            android:title="@string/settings_title_video_quality" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="download_network"
            android:summary="@string/settings_summary_download_network"
            android:title="@string/settings_title_download_network" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_category_about">

        <Preference
            android:key="copyright"
            android:title="@string/settings_copyright" />

        <Preference
            android:key="imprint"
            android:title="@string/settings_imprint" />

        <Preference
            android:key="privacy"
            android:title="@string/settings_privacy" />

        <Preference
            android:key="open_source_licenses"
            android:summary="@string/settings_summary_licenses"
            android:title="@string/settings_title_licenses" />

        <Preference
            android:key="build_version"
            android:summary="@string/settings_summary_build"
            android:title="@string/settings_title_build" />

    </PreferenceCategory>

</PreferenceScreen>