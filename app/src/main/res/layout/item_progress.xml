<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:background="@color/list_divider"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSeparator"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:textSize="18sp" />

            <include
                android:id="@+id/progress1"
                layout="@layout/container_progress_bar_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textTitle" />

            <LinearLayout
                android:id="@+id/containerDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/progress1"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <de.xikolo.view.CustomFontTextView
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="@string/icon_selftest"
                    android:textSize="18sp"
                    app:customFont="xikolo.ttf" />

                <TextView
                    android:id="@+id/textCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="|"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textPercentage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </LinearLayout>

            <include
                android:id="@+id/progress2"
                layout="@layout/container_progress_bar_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/containerDescription1" />

            <LinearLayout
                android:id="@+id/containerDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/progress2"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <de.xikolo.view.CustomFontTextView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="@string/icon_assignment"
                    android:textSize="18sp"
                    app:customFont="xikolo.ttf" />

                <TextView
                    android:id="@+id/textCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="|"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textPercentage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </LinearLayout>

            <include
                android:id="@+id/progress3"
                layout="@layout/container_progress_bar_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/containerDescription2" />

            <LinearLayout
                android:id="@+id/containerDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/progress3"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <de.xikolo.view.CustomFontTextView
                    android:id="@+id/icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="@string/icon_visited"
                    android:textSize="18sp"
                    app:customFont="fontawesome.ttf" />

                <TextView
                    android:id="@+id/textCount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="|"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textPercentage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
