<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_dialog_padding_material"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/preference_storage_external_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/abc_dialog_padding_material">
        <TextView
            android:id="@+id/preference_storage_external"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title_storage_external"/>
        <TextView
            android:id="@+id/preference_storage_external_free"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/preference_storage_external"
            tools:text="2GB Free"/>
        <CheckBox
            android:id="@+id/preference_storage_external_checkbox"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/preference_storage_internal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/preference_storage_internal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title_storage_internal"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/preference_storage_internal_free"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/preference_storage_internal"
            tools:text="28GB Free"/>
        <CheckBox
            android:id="@+id/preference_storage_internal_checkbox"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:checked="true"/>
    </RelativeLayout>
</LinearLayout>