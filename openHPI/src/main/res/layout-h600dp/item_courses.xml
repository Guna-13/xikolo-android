<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_very_light"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:textSize="22sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textTitle"
            android:layout_marginBottom="16dp"
            android:singleLine="true"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <de.xikolo.openhpi.view.CustomTextView
            android:id="@+id/textDateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textLangIcon"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dp"
            android:singleLine="true"
            android:text="@string/icon_cal"
            android:textSize="22sp"
            res:customFont="xikolo.ttf" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textDateIcon"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/textDateIcon"
            android:singleLine="true"
            android:textSize="16sp" />

        <de.xikolo.openhpi.view.CustomTextView
            android:id="@+id/textLangIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnEnroll"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@string/icon_lang"
            android:textSize="22sp"
            res:customFont="xikolo.ttf" />

        <TextView
            android:id="@+id/textLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textLangIcon"
            android:layout_toRightOf="@+id/textLangIcon"
            android:singleLine="true"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnEnroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_orange"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/btn_enroll_me"
            android:textColor="@color/white"
            android:typeface="serif" />

    </RelativeLayout>

</LinearLayout>
